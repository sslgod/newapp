<h1>Listing ideas</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Sod</th>
    <th>Author</th>
    <th>Raiting</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ideas.each do |idea| %>
  <tr>
    <td><%= idea.name %></td>
    <td><%= idea.sod %></td>
    <td><%= idea.author %></td>
    <td><%= idea.raiting %></td>
    <td><%= link_to 'Show', idea %></td>
    <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
    <td><%= link_to 'Destroy', idea, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

